FROM bskjon/debian-azuljava17-ffmpeg:latest
EXPOSE 8080

ARG MODULE_NAME
ARG PASS_APP_VERSION

RUN echo "$PASS_APP_VERSION"
ENV APP_VERSION=${PASS_APP_VERSION}
RUN echo "$APP_VERSION"

RUN echo "$MODULE_NAME"
RUN echo "${MODULE_NAME}"

COPY "./apps/${MODULE_NAME}/build/libs/app.jar" "/usr/share/app/app.jar"

